<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="form_res_config_settings" model="ir.ui.view">
      <field name="name">Res Config Settings Form View</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='user_default_rights']" position="after">
          <h2>Firebase Cloud Messaging</h2>
          <div class="row mt16 o_settings_container" name="fcm_config">
            <div class="col-xs-12 col-md-12 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="fcm_active"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="fcm_active"/>
                <group attrs="{'invisible': [('fcm_active', '=', False)]}">
                  <field name="fcm_api_key" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_auth_domain" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_project_id" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_storage_bucket" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_messaging_sender_id" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_app_id" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_measurement_id" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_vapid_key" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_server_key" attrs="{'required': [('fcm_active', '=', True)]}"/>
                  <field name="fcm_icon"/>
                </group>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>