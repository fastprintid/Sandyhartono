    <record id="form_juragan_campaign_job" model="ir.ui.view">
      <field name="name">Juragan Campaign Job Form View</field>
      <field name="model">juragan.campaign.job</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="execute" string="Re-Run" type="object" states="failed"/>
            <field name="state" widget="statusbar" statusbar_visible="waiting,done"/>
          </header>
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only"/>
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="campaign_purpose"/>
                <field name="scheduled_at"/>
              </group>
              <group>
                <field name="execution_type"/>
                <field name="total_execution"/>
              </group>
            </group>
            <notebook>
              <page string="Pricelist Items">
                <field name="pricelist_item_ids">
                  <tree string="Pricelist Items" create="0" delete="0">
                    <field name="campaign_id" invisible="1"/>
                    <field name="name" string="Applicable On"/>
                    <field name="min_quantity"/>
                    <field name="date_time_start"/>
                    <field name="date_time_end"/>
                    <field name="price_campaign" string="Price"/>
                    <field name="base" invisible="1"/>
                    <field name="price_discount" invisible="1"/>
                    <field name="applied_on" invisible="1"/>
                    <field name="compute_price" invisible="1"/>
                  </tree>
                </field>
              </page>
              <page string="Cron">
                <field name="cron_ids"/>
              </page>
              <page string="Extra Context">
                <field name="extra_context"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="form_wizard_juragan_campaign_reguler" model="ir.ui.view">
      <field name="name">Wizard Juragan Campaign Reguler Form View</field>
      <field name="model">wizard.juragan.campaign.reguler</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="campaign_id" invisible="1"/>
              <field name="company_id" invisible="1"/>
              <field name="mp_id"/>
              <field name="applied_on" widget="radio"/>
              <!--              <field name="product_tmpl_id" string="Product" required="1"/>-->
              <field name="set_mode"/>
              <field name="set_datetime" invisible="1"/>
              <field name="set_weekday" invisible="1"/>
            </group>
            <separator string="Product Filter" attrs="{'invisible': [('applied_on', '!=', '4_batch_filter')]}"/>
            <group name="product_filters" attrs="{'invisible': [('applied_on', '!=', '4_batch_filter')]}">
              <field name="product_tmpl_domain_filter" widget="domain" options="{'model': 'product.template'}"
                     nolabel="1"/>
            </group>
            <separator string="Select Multi Product(s)" attrs="{'invisible': [('applied_on', '!=', '5_products')]}"/>
            <group name="product_multi" attrs="{'invisible': [('applied_on', '!=', '5_products')]}">
              <field name="product_tmpl_ids" nolabel="1" attrs="{'required': [('applied_on', '=', '5_products')]}">
                <tree>
                  <field name="default_code"/>
                  <field name="name"/>
                  <field name="list_price"/>
                  <field name="categ_id"/>
                  <field name="type"/>
                </tree>
              </field>
            </group>
            <separator string="Select Single Product" attrs="{'invisible': [('applied_on', '!=', '1_product')]}"/>
            <group name="product_single" attrs="{'invisible': [('applied_on', '!=', '1_product')]}">
              <field name="product_tmpl_id" nolabel="1" attrs="{'required': [('applied_on', '=', '1_product')]}"/>
            </group>
            <separator string="Datetime Range Configuration" attrs="{'invisible': [('set_datetime', '=', False)]}"/>
            <group attrs="{'invisible': [('set_datetime', '=', False)]}">
              <field name="date_time_start" attrs="{'required': [('set_datetime', '=', True)]}"/>
              <field name="date_time_end" attrs="{'required': [('set_datetime', '=', True)]}"/>
            </group>
            <separator string="Weekday Configuration" attrs="{'invisible': [('set_weekday', '=', False)]}"/>
            <group attrs="{'invisible': [('set_weekday', '=', False)]}">
              <group>
                <label for="" string="Start &amp; End Time"/>
                <div>
                  <div class="o_row" name="time_start">
                    <field name="time_start" attrs="{'required': [('set_weekday', '=', True)]}"/>
                    <span>to</span>
                    <field name="time_end" attrs="{'required': [('set_weekday', '=', True)]}"/>
                  </div>
                  <small class="text-info oe_edit_only"><i class="fa fa-info-circle"></i> Use 24-hours time
                    format.</small>
                </div>
                <separator></separator>
                <field name="weekday_tz" attrs="{'required': [('set_weekday', '=', True)]}"/>
              </group>
              <group>
                <div><i>Select day(s) on which you want to apply the pricelist rule. If none of the days selected, by
                  default it will applied on all days.</i>
                  <group>
                    <group>
                      <field name="day_0"/>
                      <field name="day_1"/>
                      <field name="day_2"/>
                      <field name="day_3"/>
                    </group>
                    <group>
                      <field name="day_4"/>
                      <field name="day_5"/>
                      <field name="day_6"/>
                    </group>
                  </group>
                </div>
              </group>
            </group>
            <separator string="Price Computation"/>
            <group>
              <group>
                <label for="compute_price" string="Compute Price"/>
                <div>
                  <field name="compute_price" widget="radio"/>
                  <field name="currency_id" invisible="1"/>
                  <div attrs="{'invisible':[('compute_price', '!=', 'fixed')]}">
                    <field name="fixed_price" nolabel="1" widget='monetary'
                           options="{'currency_field': 'currency_id', 'field_digits': True}"/></div>
                  <div attrs="{'invisible':[('compute_price', '!=', 'percentage')]}">
                    <field name="percent_price" nolabel="1" class="oe_inline"/>%%
                  </div>
                </div>
              </group>
            </group>
            <div class="oe_grey" groups="uom.group_uom">
              <p>The computed price is expressed in the default Unit of Measure of the product.</p>
            </div>
            <group col="6" attrs="{'invisible':[('compute_price', '!=', 'formula')]}">
              <field name="base" colspan="6"/>

              <label for="" string="New Price ="/>
              <div>
                <span attrs="{'invisible':[('base', '!=', 'list_price')]}">Public Price - </span>
                <span attrs="{'invisible':[('base', '!=', 'standard_price')]}">Cost - </span>
                <span attrs="{'invisible':[('base', '!=', 'pricelist')]}">Other Pricelist - </span>
              </div>
              <label for="price_discount"/>
              <div class="o_row">
                <field name="price_discount"/>
                <span>%%</span>
              </div>
              <label string=" + " for="price_surcharge"/>
              <field name="price_surcharge" nolabel="1"/>

              <field name="price_round" string="Rounding Method"/>
              <field name="price_min_margin" string="Min. Margin"/>
              <field name="price_max_margin" string="Max. Margin"/>

              <field name="base_pricelist_id"
                     attrs="{'invisible':[('base', '!=', 'pricelist')],'required': [('base','=', 'pricelist')], 'readonly': [('base','!=', 'pricelist')]}"/>
            </group>
            <!--            <field name="pricelist_item_ids" context="{-->
            <!--                'default_applied_on': '1_product',-->
            <!--                'default_product_tmpl_id': product_tmpl_id,-->
            <!--                'default_campaign_id': campaign_id-->
            <!--            }" attrs="{'invisible': ['|', ('product_tmpl_id', '=', False), ('mp_id', '=', False)]}">-->
            <!--              <tree string="Pricelist Items">-->
            <!--                <field name="campaign_id" invisible="1"/>-->
            <!--                <field name="name" string="Applicable On"/>-->
            <!--                <field name="min_quantity"/>-->
            <!--                <field name="price_campaign" string="Price"/>-->
            <!--                <field name="base" invisible="1"/>-->
            <!--                <field name="price_discount" invisible="1"/>-->
            <!--                <field name="applied_on" invisible="1"/>-->
            <!--                <field name="compute_price" invisible="1"/>-->
            <!--              </tree>-->
            <!--            </field>-->
          </sheet>
          <footer>
            <button name="add" type="object" string="Add" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

