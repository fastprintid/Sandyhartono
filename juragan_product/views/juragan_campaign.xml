    <record id="tree_juragan_campaign" model="ir.ui.view">
      <field name="name">Juragan Campaign Tree View</field>
      <field name="model">juragan.campaign</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="form_juragan_campaign" model="ir.ui.view">
      <field name="name">Juragan Campaign Form View</field>
      <field name="model">juragan.campaign</field>
      <field name="arch" type="xml">
        <form string="Juragan Campaign">
          <header>
            <button name="action_run" string="Run Campaign" class="oe_highlight oe_read_only" type="object"
                    states="draft"/>
            <button name="action_push" string="Upload" class="oe_highlight oe_read_only" type="object"
                    attrs="{'invisible': ['|', ('state', '!=', 'done'), ('campaign_purpose', '!=', 'mp_discount')]}"/>
            <button name="action_draft" string="Back to Planning" class="oe_read_only" type="object" states="done"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="%(juragan_product.action_window_juragan_campaign_job)d"
                      type="action"
                      class="oe_stat_button"
                      icon="fa-tasks"
                      attrs="{'invisible': ['|', ('state', '!=', 'done'), ('campaign_job_count', '=', 0)]}">
                <field string="Jobs" name="campaign_job_count" widget="statinfo"/>
              </button>
            </div>
            <div class="oe_title">
              <label for="name" class="oe_edit_only"/>
              <h1>
                <field name="name" placeholder="e.g. Black Friday Promo"/>
              </h1>
            </div>
            <group>
              <field name="campaign_purpose"/>
              <field name="mp_id"
                     attrs="{'invisible': [('campaign_purpose', '!=', 'mp_discount')],
                            'required': [('campaign_purpose', '=', 'mp_discount')]}"/>
              <field name="currency_id" groups="base.group_multi_currency"/>
              <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
              <label for="pricelist_id"/>
              <div>
                <div class="o_row" name="pricelist_id">
                  <field name="pricelist_id"/>
                </div>
                <small class="text-info oe_edit_only"><i class="fa fa-info-circle"></i> Please select an existing
                  pricelist to place this campaign or a new pricelist will be created automatically by the
                  system once this campaign scheduled.</small>
              </div>
              <field name="set_mode" attrs="{'invisible': [('campaign_purpose', '=', 'mp_discount')]}"/>
              <field name="set_datetime" invisible="1"/>
              <field name="set_weekday" invisible="1"/>
            </group>
            <separator string="Datetime Range Configuration" attrs="{'invisible': [('set_datetime', '=', False)]}"/>
            <group attrs="{'invisible': [('set_datetime', '=', False)]}">
              <field name="date_time_start" attrs="{'required': [('set_datetime', '=', True)]}"/>
              <field name="date_time_end" attrs="{'required': [('set_datetime', '=', True)]}"/>
            </group>
            <separator string="Weekday Configuration"
                       attrs="{'invisible': ['|', ('set_weekday', '=', False), ('campaign_purpose', '=', 'mp_discount')]}"/>
            <group attrs="{'invisible': ['|', ('set_weekday', '=', False), ('campaign_purpose', '=', 'mp_discount')]}">
              <group>
                <label for="" string="Start &amp; End Time"/>
                <div>
                  <div class="o_row" name="time_start">
                    <field name="time_start" attrs="{'required': [('set_weekday', '=', True)]}"/>
                    <span>to</span>
                    <field name="time_end" attrs="{'required': [('set_weekday', '=', True)]}"/>
                  </div>
                  <small class="text-info oe_edit_only"><i class="fa fa-info-circle"></i> Use 24-hours time
                    format.</small>
                </div>
                <separator></separator>
                <field name="weekday_tz" attrs="{'required': [('set_weekday', '=', True)]}"/>
              </group>
              <group>
                <div><i>Select day(s) on which you want to apply the pricelist rule. If none of the days selected, by
                  default it will applied on all days.</i>
                  <group>
                    <group>
                      <field name="day_0"/>
                      <field name="day_1"/>
                      <field name="day_2"/>
                      <field name="day_3"/>
                    </group>
                    <group>
                      <field name="day_4"/>
                      <field name="day_5"/>
                      <field name="day_6"/>
                    </group>
                  </group>
                </div>
              </group>
            </group>
            <separator string="Price Rules"/>
            <button name="open_wizard_campaign_reguler" string="Add Reguler Price Rule"
                    class="oe_highlight oe_edit_only" type="object" style="margin: 10px;"
                    attrs="{'invisible': ['|', ('campaign_purpose', '!=', 'reguler'), ('state', '!=', 'draft')]}"/>
            <button name="open_wizard_campaign_mp_discount" string="Add Marketplace Account Price Rule"
                    class="oe_highlight oe_edit_only" type="object" style="margin: 10px;"
                    attrs="{'invisible': ['|', ('campaign_purpose', '!=', 'mp_discount'), ('state', '!=', 'draft')]}"/>
            <button name="open_wizard_campaign_wholesale" string="Add Wholesale Price Rule"
                    class="oe_highlight oe_edit_only" type="object" style="margin: 10px;"
                    attrs="{'invisible': ['|', ('campaign_purpose', '!=', 'wholesale'), ('state', '!=', 'draft')]}"/>
            <field name="pricelist_item_ids">
              <tree string="Pricelist Items" create="0">
                <field name="campaign_id" invisible="1"/>
                <field name="name" string="Applicable On"/>
                <field name="min_quantity"/>
                <field name="date_time_start"/>
                <field name="date_time_end"/>
                <field name="price_campaign" string="Price"/>
                <field name="base" invisible="1"/>
                <field name="price_discount" invisible="1"/>
                <field name="applied_on" invisible="1"/>
                <field name="compute_price" invisible="1"/>
              </tree>
            </field>
          </sheet>
        </form>
      </field>
    </record>

    <record id="tree_juragan_campaign_job" model="ir.ui.view">
      <field name="name">Juragan Campaign Job Tree View</field>
      <field name="model">juragan.campaign.job</field>
      <field name="arch" type="xml">
        <tree decoration-muted="state == 'done'" decoration-danger="state == 'failed'">
          <field name="name"/>
          <field name="campaign_purpose"/>
          <field name="scheduled_at"/>
          <field name="execution_type"/>
          <field name="state"/>
        </tree>
