<odoo>

    <record id="sale_cancel_form" model="ir.ui.view">
        <field name="name">sale.cancel.form.wizard</field>
        <field name="model">sale.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Order">
                <group class="oe_title">
                    <field name="cancel_reason_name" invisible="1"/>
                    <field name="cancel_reason_mp_type" invisible="1"/>
                    <field name="cancel_reason_id" domain="[('mp_type', '=', context.get('mp_type'))]" options="{'no_create': True, 'no_create_edit':True, 'no_quick_create': True}"/>
                    <field name="shop_close_end_date"
                           attrs="{
                           'invisible': ['!', '&amp;', ('cancel_reason_mp_type', '=', 'tp'), ('cancel_reason_name', '=', '4')],
                           'required': [('cancel_reason_mp_type', '=', 'tp'), ('cancel_reason_name', '=', '4')]
                           }"/>
                    <field name="shop_close_note"
                           attrs="{
                           'invisible': ['!', '&amp;', ('cancel_reason_mp_type', '=', 'tp'), ('cancel_reason_name', '=', '4')],
                           'required': [('cancel_reason_mp_type', '=', 'tp'), ('cancel_reason_name', '=', '4')]
                           }"/>
                </group>
                <footer>
                    <button name="cancel_process" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field> 
    </record>

    <record id="accept_sale_cancel_form" model="ir.ui.view">
        <field name="name">accept.sale.cancel.form.wizard</field>
        <field name="model">accept.sale.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Accept Cancel Order">
                <group class="oe_title">
                   <p>Apakah anda yakin ingin menyetujui pengajuan pembatalan order ?</p>
                </group>
                <footer>
                    <button name="accept_cancel_process" string="Iya" type="object" class="btn-primary"/>
                    <button string="Tidak" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field> 
    </record>

    <record id="reject_sale_cancel_form" model="ir.ui.view">
        <field name="name">reject.sale.cancel.form.wizard</field>
        <field name="model">reject.sale.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Cancel Order">
                <group class="oe_title">
                   <p>Apakah anda yakin ingin menolak pengajuan pembatalan order ?</p>
                </group>
                <footer>
                    <button name="reject_cancel_process" string="Iya" type="object" class="btn-primary"/>
                    <button string="Tidak" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field> 
    </record>



    <record id="sale_cancel_wizard" model="ir.actions.act_window">
      <field name="name">Cancel Order</field>  
      <field name="type">ir.actions.act_window</field>  
      <field name="res_model">sale.cancel.wizard</field>  
      <field name="view_mode">form</field>
      <field name="view_id" ref="sale_cancel_form"/>
      <field name="target">new</field>  
    </record>
</odoo>