<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="form_res_config_settings" model="ir.ui.view">
      <field name="name">Res Config Settings Form View</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="product.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='product_general_settings']" position="inside">
          <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane"/>
            <div class="o_setting_right_pane">
              <label for="sequence_product_default_code"/>
              <div class="text-muted">
                Default sequence number for Product Default Code
              </div>
              <div class="content-group">
                <div class="row mt16 ml4">
                  <field name="sequence_product_default_code"/>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>